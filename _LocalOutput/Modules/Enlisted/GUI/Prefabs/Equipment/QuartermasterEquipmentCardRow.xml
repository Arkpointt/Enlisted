<Prefab>
	<Window>
		<!-- Equipment Card Row - Horizontal container for equipment cards -->
		<Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" MarginTop="5" MarginBottom="5">
			<Children>
				<ListPanel DataSource="{Cards}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="HorizontalLeftToRight">
					<ItemTemplate>
						<QuartermasterEquipmentCard ButtonType="Radio" />
					</ItemTemplate>
				</ListPanel>
			</Children>
		</Widget>
	</Window>
</Prefab>
