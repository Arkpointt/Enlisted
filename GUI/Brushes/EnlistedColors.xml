<?xml version="1.0" encoding="utf-8"?>
<!--
  Enlisted Mod - Custom Color Palette
  Extends GameMenu.InfoText with semantic color styles for military intelligence brief theme
-->
<Brushes>
  <!-- Override GameMenu.InfoText to add custom color styles -->
  <Brush Name="GameMenu.InfoText" BaseBrush="Info.Text" Font="Galahad" TextHorizontalAlignment="Center">
    <Layers>
    </Layers>
    <Styles>
      <!-- Default style (keep native) -->
      <Style Name="Default" FontColor="#FAF4DEFF" FontSize="22" TextBlur="0" TextGlowColor="#000000FF" TextGlowRadius="0" TextOutlineAmount="0" TextOutlineColor="#FFFFFF00" />
      
      <!-- Custom Enlisted styles -->
      <Style Name="Header" FontColor="#00CCFFFF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="0" />
      <Style Name="Label" FontColor="#8CDBC4FF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="0" />
      <Style Name="Success" FontColor="#90EE90FF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="0" />
      <Style Name="Warning" FontColor="#FFD700FF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="0" />
      <Style Name="Alert" FontColor="#FF6B6BFF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="0" />
      <Style Name="Critical" FontColor="#FF0000FF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="1" TextOutlineColor="#000000FF" />
      <Style Name="Urgent" FontColor="#FFA500FF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="0.5" TextOutlineColor="#000000FF" />
      
      <!-- Blue variants for intelligence/tactical information -->
      <Style Name="Intel" FontColor="#6B9FFFFF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="0.5" TextOutlineColor="#000000FF" />
      <Style Name="Tactical" FontColor="#4682B4FF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="1" TextOutlineColor="#000000FF" />
      <Style Name="Strategic" FontColor="#1E90FFFF" TextGlowColor="#000000FF" FontSize="22" TextBlur="0" TextGlowRadius="0" TextOutlineAmount="1" TextOutlineColor="#000000FF" />
    </Styles>
  </Brush>
</Brushes>
