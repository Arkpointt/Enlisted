<Brushes>
  <!-- Combat Log Text Brush with Encyclopedia Link Styles -->
  <Brush Name="Enlisted.CombatLog.Text" Font="Galahad" TextHorizontalAlignment="Left">
    <Layers>
    </Layers>
    <Styles>
      <!-- Default text style -->
      <Style Name="Default" FontColor="#FAF4DEFF" TextGlowColor="#000000FF" TextOutlineColor="#000000CC" TextOutlineAmount="0.1" TextGlowRadius="0" TextBlur="1" FontSize="20" />
      
      <!-- Generic link style -->
      <Style Name="Link" FontColor="#00CCFFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.MouseOver" FontColor="#00FFFFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.MouseDown" FontColor="#0099CCFF" TextGlowColor="#111111FF" />
      
      <!-- Hero link styles (cyan/turquoise) -->
      <Style Name="Link.Hero" TextColorFactor="1" FontColor="#8CDBC4FF" TextGlowColor="#111111FF" />
      <Style Name="Link.Hero.MouseOver" TextColorFactor="1.5" FontColor="#4FD1ABBB" TextGlowColor="#111111FF" />
      <Style Name="Link.Hero.MouseDown" TextColorFactor="0.7" FontColor="#4FD1ABFF" TextGlowColor="#111111FF" />
      
      <!-- Settlement link styles (light blue) -->
      <Style Name="Link.Settlement" TextColorFactor="1" FontColor="#82B4FFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.Settlement.MouseOver" TextColorFactor="1.5" FontColor="#5599FFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.Settlement.MouseDown" TextColorFactor="0.7" FontColor="#3377DDFF" TextGlowColor="#111111FF" />
      
      <!-- Faction-specific link styles (native Bannerlord kingdom colors, brightened for readability) -->
      
      <!-- Vlandia (red) - base: FF5C2017 -->
      <Style Name="Link.FactionVlandia" TextColorFactor="1" FontColor="#C14030FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionVlandia.MouseOver" TextColorFactor="1.3" FontColor="#F25040FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionVlandia.MouseDown" TextColorFactor="0.8" FontColor="#9A3328FF" TextGlowColor="#111111FF" />
      
      <!-- Sturgia (blue) - base: FF1C2A50 -->
      <Style Name="Link.FactionSturgia" TextColorFactor="1" FontColor="#3854A0FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionSturgia.MouseOver" TextColorFactor="1.3" FontColor="#4869D0FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionSturgia.MouseDown" TextColorFactor="0.8" FontColor="#2D4380FF" TextGlowColor="#111111FF" />
      
      <!-- Northern Empire (purple) - base: FF39223F -->
      <Style Name="Link.FactionEmpire_N" TextColorFactor="1" FontColor="#73447EFF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionEmpire_N.MouseOver" TextColorFactor="1.3" FontColor="#9559AEFF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionEmpire_N.MouseDown" TextColorFactor="0.8" FontColor="#5C3665FF" TextGlowColor="#111111FF" />
      
      <!-- Western Empire (pink/magenta) - base: FF9E5072 -->
      <Style Name="Link.FactionEmpire_W" TextColorFactor="1" FontColor="#D078A0FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionEmpire_W.MouseOver" TextColorFactor="1.3" FontColor="#FF9DCFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionEmpire_W.MouseDown" TextColorFactor="0.8" FontColor="#A66080FF" TextGlowColor="#111111FF" />
      
      <!-- Southern Empire (light purple) - base: FF9382D0 -->
      <Style Name="Link.FactionEmpire_S" TextColorFactor="1" FontColor="#B8A0E8FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionEmpire_S.MouseOver" TextColorFactor="1.3" FontColor="#E0C8FFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionEmpire_S.MouseDown" TextColorFactor="0.8" FontColor="#9380BAFF" TextGlowColor="#111111FF" />
      
      <!-- Aserai (orange) - base: FF965228 -->
      <Style Name="Link.FactionAserai" TextColorFactor="1" FontColor="#D47838FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionAserai.MouseOver" TextColorFactor="1.3" FontColor="#FF9B4AFF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionAserai.MouseDown" TextColorFactor="0.8" FontColor="#AA602DFF" TextGlowColor="#111111FF" />
      
      <!-- Khuzait (teal) - base: FF429081 -->
      <Style Name="Link.FactionKhuzait" TextColorFactor="1" FontColor="#5BC0B0FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionKhuzait.MouseOver" TextColorFactor="1.3" FontColor="#75F5E0FF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionKhuzait.MouseDown" TextColorFactor="0.8" FontColor="#499A8DFF" TextGlowColor="#111111FF" />
      
      <!-- Battania (green) - base: FF2D3F1D -->
      <Style Name="Link.FactionBattania" TextColorFactor="1" FontColor="#5C7E3AFF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionBattania.MouseOver" TextColorFactor="1.3" FontColor="#77A54CFF" TextGlowColor="#111111FF" />
      <Style Name="Link.FactionBattania.MouseDown" TextColorFactor="0.8" FontColor="#4A652EFF" TextGlowColor="#111111FF" />
      
      <!-- Generic kingdom fallback (neutral cream, matches default text) -->
      <Style Name="Link.Kingdom" TextColorFactor="1" FontColor="#FAF4DEFF" TextGlowColor="#111111FF" />
      <Style Name="Link.Kingdom.MouseOver" TextColorFactor="1.3" FontColor="#FFFFFFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.Kingdom.MouseDown" TextColorFactor="0.8" FontColor="#C8C3B2FF" TextGlowColor="#111111FF" />
      
      <!-- Clan link styles (orange) -->
      <Style Name="Link.Clan" TextColorFactor="1" FontColor="#FFA500FF" TextGlowColor="#111111FF" />
      <Style Name="Link.Clan.MouseOver" TextColorFactor="1.5" FontColor="#FFBF00FF" TextGlowColor="#111111FF" />
      <Style Name="Link.Clan.MouseDown" TextColorFactor="0.7" FontColor="#CC8400FF" TextGlowColor="#111111FF" />
      
      <!-- Concept link styles (white) -->
      <Style Name="Link.Concept" TextColorFactor="1" FontColor="#FFFFFFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.Concept.MouseOver" TextColorFactor="1.5" FontColor="#FFFFFFFF" TextGlowColor="#111111FF" />
      <Style Name="Link.Concept.MouseDown" TextColorFactor="0.7" FontColor="#CCCCCCFF" TextGlowColor="#111111FF" />
    </Styles>
  </Brush>
</Brushes>
