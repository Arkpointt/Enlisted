<Prefab>
	<Window>
		<!-- Single Activity Card - Modern clean design -->
		<ButtonWidget Command.Click="ExecuteSelectActivity" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="420" SuggestedHeight="240" MarginRight="15" MarginBottom="15" IsEnabled="@IsEnabled" Brush="Encyclopedia.SubPage.Element" UpdateChildrenStates="true">
			<Children>
				
				<!-- Much darker background for maximum text contrast -->
				<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Sprite="BlankWhiteSquare_9" Color="#00000080" />
				
				<!-- Top colored accent bar (full width) -->
				<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="4" VerticalAlignment="Top" Color="@CategoryColor" Sprite="BlankWhiteSquare_9" />
				
				<!-- Card content container -->
				<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" MarginLeft="25" MarginRight="25" MarginTop="20" MarginBottom="20">
					<Children>
						
						<!-- Header: Category badge only (NO ICON) -->
						<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="120" SuggestedHeight="32" VerticalAlignment="Top" HorizontalAlignment="Left" Sprite="General\Notifications\notification_general" Color="@CategoryColor">
							<Children>
								<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="SPGeneral.MediumText" Brush.FontSize="13" Brush.TextColor="#FFFFFFFF" Text="@CategoryBadgeText" />
							</Children>
						</Widget>
						
						<!-- Title - bold and prominent -->
						<RichTextWidget WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" SuggestedWidth="370" MarginTop="50" VerticalAlignment="Top" Brush="Recruitment.Popup.Title.Text" Brush.FontSize="24" Brush.TextColor="#FFFFFFFF" Text="@Title" />
						
						<!-- Description - clear and readable -->
						<RichTextWidget WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" SuggestedWidth="370" MarginTop="92" VerticalAlignment="Top" Brush="SPGeneral.MediumText" Brush.FontSize="15" Brush.LineSpacing="22" Brush.TextColor="#E0E0E0FF" Text="@Description" />
						
						<!-- Bottom info row -->
						<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="60" VerticalAlignment="Bottom">
							<Children>
								
								<!-- Left side info boxes -->
								<Widget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="220" HorizontalAlignment="Left">
									<Children>
										<!-- Rewards box -->
										<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="26" VerticalAlignment="Top" Sprite="BlankWhiteSquare_9" Color="#00330020">
											<Children>
												<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" MarginLeft="8" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="SPGeneral.SmallText" Brush.FontSize="11" Brush.TextColor="#BBBBBBFF" Text="↑ " />
												<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" MarginLeft="25" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="SPGeneral.MediumText" Brush.FontSize="13" Brush.TextColor="#55FF99FF" Text="@RewardsText" />
											</Children>
										</Widget>
										
										<!-- Costs box -->
										<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="26" MarginTop="32" VerticalAlignment="Top" Sprite="BlankWhiteSquare_9" Color="#33000020">
											<Children>
												<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" MarginLeft="8" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="SPGeneral.SmallText" Brush.FontSize="11" Brush.TextColor="#BBBBBBFF" Text="↓ " />
												<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" MarginLeft="25" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="SPGeneral.MediumText" Brush.FontSize="13" Brush.TextColor="#FFAA55FF" Text="@CostsText" />
											</Children>
										</Widget>
									</Children>
								</Widget>
								
								<!-- Availability status badge (right) - large and prominent -->
								<Widget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="140" HorizontalAlignment="Right" Sprite="BlankWhiteSquare_9" Color="#00000060">
									<Children>
										<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="SPGeneral.MediumText" Brush.FontSize="16" Brush.TextColor="@AvailabilityColor" Text="@AvailabilityText" />
									</Children>
								</Widget>
								
							</Children>
						</Widget>
						
					</Children>
				</Widget>
				
			</Children>
		</ButtonWidget>
	</Window>
</Prefab>
