<Prefab>
	<Window>
		<!-- Provision Card - Food item with Buy 1 / Buy All buttons -->
		<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="185" SuggestedHeight="320" MarginTop="10" MarginLeft="10" Tooltip="@TooltipText" AlphaFactor="@CardAlpha">
			<Children>
				<!-- Card background with subtle border -->
				<BrushWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="Encyclopedia.SubPage.Element">
					<Children>
						<!-- Main card container -->
						<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" MarginLeft="5" MarginRight="5" MarginTop="5" MarginBottom="5">
							<Children>
								
								<!-- Food Icon -->
								<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="70" SuggestedWidth="140" MarginTop="10" HorizontalAlignment="Center" Brush="Encyclopedia.SubPage.Element">
									<Children>
										<ImageIdentifierWidget DataSource="{Image}" DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="130" SuggestedHeight="60" HorizontalAlignment="Center" VerticalAlignment="Center" ImageId="@Id" AdditionalArgs="@AdditionalArgs" TextureProviderName="@TextureProviderName" />
									</Children>
								</Widget>
								
								<!-- Item Name -->
								<RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" MarginTop="85" MarginLeft="2" MarginRight="2" Brush="Recruitment.Popup.Title.Text" Brush.FontSize="16" Brush.TextHorizontalAlignment="Center" Text="@ItemName"/>
								
								<!-- Price Display -->
								<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" MarginTop="115" Brush="Recruitment.Popup.Description.Text" Brush.FontSize="16" Brush.TextHorizontalAlignment="Center" Text="@PriceText"/>
								
								<!-- Quantity Available -->
								<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" MarginTop="140" Brush="SPGeneral.SmallText" Brush.FontSize="13" Brush.TextHorizontalAlignment="Center" Text="@QuantityText"/>
								
								<!-- Description -->
								<RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" MarginTop="160" MarginLeft="4" MarginRight="4" Brush="SPGeneral.SmallText" Brush.FontSize="12" Brush.TextHorizontalAlignment="Center" Text="@DescriptionText"/>
								
								<!-- Status indicator -->
								<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" MarginTop="185" Brush="SPGeneral.SmallText" Brush.FontSize="12" Brush.TextHorizontalAlignment="Center" Text="@StatusText"/>
								
								<!-- Button container -->
								<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="100" VerticalAlignment="Bottom" MarginBottom="10">
									<Children>
										
										<!-- Buy 1 Button -->
										<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="38" SuggestedWidth="145" HorizontalAlignment="Center" MarginBottom="50" Brush="ButtonBrush1" Command.Click="ExecuteBuyOne" IsEnabled="@BuyOneEnabled">
											<Children>
												<RichTextWidget DoNotAcceptEvents="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="OverlayPopup.ButtonText" Brush.FontSize="14" Text="Buy 1" />
											</Children>
										</ButtonWidget>
										
										<!-- Buy All Button -->
										<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="38" SuggestedWidth="145" HorizontalAlignment="Center" VerticalAlignment="Bottom" Brush="ButtonBrush1" Command.Click="ExecuteBuyAll" IsEnabled="@BuyAllEnabled">
											<Children>
												<RichTextWidget DoNotAcceptEvents="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="OverlayPopup.ButtonText" Brush.FontSize="14" Text="Buy All" />
											</Children>
										</ButtonWidget>
										
									</Children>
								</Widget>
								
							</Children>
						</Widget>
					</Children>
				</BrushWidget>
			</Children>
		</Widget>
	</Window>
</Prefab>

