    {
      "id": "repair_sabotage_discovered",
      "order_type": "order_repair_equipment",
      "category": "order_event",
      "severity": "urgent",
      "titleId": "repair_sabotage_discovered_title",
      "title": "Sabotage",
      "setupId": "repair_sabotage_discovered_setup",
      "setup": "This damage wasn't from use. Someone cut these straps deliberately. Sabotage.",
      "requirements": {
        "world_state": ["peacetime_garrison", "siege_defending"]
      },
      "options": [
        {
          "id": "investigate_quietly",
          "textId": "repair_sabotage_discovered_investigate_quietly",
          "text": "Investigate quietly. Don't tip off the saboteur.",
          "tooltip": "+10 Scrutiny, +3 Officer Rep. Uses Perception.",
          "skillCheck": {
            "skill": "Perception",
            "difficulty": 45
          },
          "effects": {
            "escalation": {
              "scrutiny": 10
