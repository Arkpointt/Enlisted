    {
      "id": "lead_morale_drop",
      "order_type": "order_lead_patrol",
      "category": "order_event",
      "severity": "attention",
      "titleId": "lead_morale_drop_title",
      "title": "Grumbling Men",
      "setupId": "lead_morale_drop_setup",
      "setup": "The men are tired and starting to complain. 'Another patrol. What's the point?' Morale is slipping.",
      "requirements": {
        "world_state": ["war_marching", "war_active_campaign"],
        "notAtSea": true
      },
      "options": [
        {
          "id": "inspiring_speech",
          "textId": "lead_morale_drop_inspiring_speech",
          "text": "Give them a reason to care.",
          "tooltip": "Boost morale. +5 Company Morale, +3 Soldier Rep.",
          "skillCheck": {
            "skill": "Leadership",
            "difficulty": 50
          },
          "effects": {
            "companyNeeds": {
              "Morale": 5
            },
            "soldierRep": 3,
            "skillXp": { "Leadership": 28 }
          },
          "failEffects": {
            "companyNeeds": {
              "Morale": 2
            },
            "soldierRep": 1,
            "skillXp": { "Leadership": 14 }
          },
          "resultTextId": "lead_morale_drop_inspiring_speech_result",
          "resultText": "You remind them what they're fighting for. Backs straighten. Pace quickens.",
          "failResultTextId": "lead_morale_drop_inspiring_speech_fail",
          "failResultText": "The words come out flat. Some nod, most don't."
        },
        {
          "id": "threaten",
          "textId": "lead_morale_drop_threaten",
          "text": "Remind them of the consequences of failure.",
          "tooltip": "+2 Morale (fear-based), -3 Soldier Rep.",
          "effects": {
            "companyNeeds": {
              "Morale": 2
            },
            "soldierRep": -3,
            "skillXp": { "Leadership": 14 }
          },
          "resultTextId": "lead_morale_drop_threaten_result",
          "resultText": "They shut up and march. Fear works, but it's not loyalty."
        },
        {
          "id": "listen",
          "textId": "lead_morale_drop_listen",
          "text": "Listen to their complaints.",
          "tooltip": "+3 Morale, +2 Soldier Rep.",
          "effects": {
            "companyNeeds": {
              "Morale": 3
            },
            "soldierRep": 2,
            "skillXp": { "Leadership": 20 }
          },
          "resultTextId": "lead_morale_drop_listen_result",
          "resultText": "You let them vent. Sometimes that's all men need."
        }
      ]
    },
