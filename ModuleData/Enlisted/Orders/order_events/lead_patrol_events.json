  "events": [
    {
      "id": "lead_soldier_behind",
      "order_type": "order_lead_patrol",
      "category": "order_event",
      "severity": "attention",
      "titleId": "lead_soldier_behind_title",
      "title": "Man Falling Behind",
      "setupId": "lead_soldier_behind_setup",
      "setup": "One of your men is struggling. He's limping, falling behind the group. The patrol can't wait forever.",
      "requirements": {
        "world_state": ["war_marching", "war_active_campaign"],
        "notAtSea": true
      },
      "options": [
        {
          "id": "wait",
          "textId": "lead_soldier_behind_wait",
          "text": "Wait for him. We don't leave anyone behind.",
          "tooltip": "Delay the patrol. +3 Soldier Rep, +3 fatigue.",
          "effects": {
            "soldierRep": 3,
            "fatigue": 3,
            "skillXp": { "Leadership": 18 }
          },
          "resultTextId": "lead_soldier_behind_wait_result",
          "resultText": "He catches up, grateful. The men notice how you treat your own."
        },
        {
          "id": "send_someone",
          "textId": "lead_soldier_behind_send_someone",
          "text": "Send someone back to help him.",
          "tooltip": "-1 Soldier Rep, +2 fatigue.",
          "effects": {
            "soldierRep": -1,
            "fatigue": 2,
            "skillXp": { "Leadership": 12 }
          },
          "resultTextId": "lead_soldier_behind_send_someone_result",
          "resultText": "{COMRADE_NAME} drops back. You keep the patrol moving."
        },
        {
          "id": "leave_him",
          "textId": "lead_soldier_behind_leave_him",
          "text": "Leave him. He knows the way back.",
          "tooltip": "-5 Soldier Rep. Cold but efficient.",
          "effects": {
            "soldierRep": -5,
            "skillXp": { "Tactics": 8 }
          },
          "resultTextId": "lead_soldier_behind_leave_him_result",
          "resultText": "He'll make it back. Probably. The patrol moves faster without him."
        }
      ]
    },
    {
      "id": "lead_route_dispute",
      "order_type": "order_lead_patrol",
      "category": "order_event",
      "severity": "normal",
      "titleId": "lead_route_dispute_title",
      "title": "Route Dispute",
      "setupId": "lead_route_dispute_setup",
      "setup": "Your scout disagrees on the direction. 'That way leads into rough ground. I know a better path.'",
      "requirements": {
        "world_state": ["war_marching", "war_active_campaign"],
        "notAtSea": true
      },
      "options": [
        {
          "id": "trust_him",
          "textId": "lead_route_dispute_trust_him",
          "text": "Trust his judgment.",
          "tooltip": "+2 Officer Rep, +2 Soldier Rep.",
          "effects": {
            "officerRep": 2,
            "soldierRep": 2,
            "skillXp": { "Leadership": 16 }
          },
          "resultTextId": "lead_route_dispute_trust_him_result",
          "resultText": "His route is clear. He knows this ground better than you."
        },
        {
          "id": "overrule",
          "textId": "lead_route_dispute_overrule",
          "text": "Overrule him. Stick to the plan.",
          "tooltip": "+3 Officer Rep, -1 Soldier Rep.",
          "skillCheck": {
            "skill": "Tactics",
            "difficulty": 50
          },
          "effects": {
            "officerRep": 3,
            "soldierRep": -1,
            "skillXp": { "Tactics": 28 }
          },
          "failEffects": {
            "officerRep": 1,
            "soldierRep": -2,
            "skillXp": { "Tactics": 14 }
          },
          "resultTextId": "lead_route_dispute_overrule_result",
          "resultText": "Your route works. Sometimes the plan is right.",
          "failResultTextId": "lead_route_dispute_overrule_fail",
          "failResultText": "Rough ground slows you down. Should have listened."
        },
        {
          "id": "compromise",
          "textId": "lead_route_dispute_compromise",
          "text": "Hear him out, then decide.",
          "tooltip": "+1 Officer Rep, +1 Soldier Rep.",
          "effects": {
            "officerRep": 1,
            "soldierRep": 1,
            "skillXp": { "Leadership": 14 }
          },
          "resultTextId": "lead_route_dispute_compromise_result",
          "resultText": "You blend both ideas. A good leader listens."
        }
      ]
    },
