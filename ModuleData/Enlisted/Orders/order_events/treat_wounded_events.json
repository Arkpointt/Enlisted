        "world_state": ["peacetime_garrison"]
      },
      "options": [
        {
          "id": "isolate",
          "textId": "treat_contagion_risk_isolate",
          "text": "Isolate the sick. Quarantine.",
          "tooltip": "+2 Medical Risk, +1 Soldier Rep. Proper procedure.",
          "effects": {
            "medicalRisk": 2,
            "soldierRep": 1,
            "skillXp": { "Medicine": 22 }
          },
          "resultTextId": "treat_contagion_risk_isolate_result",
          "resultText": "You set up a separate tent. The fever doesn't spread further."
        },
        {
          "id": "treat_together",
          "textId": "treat_contagion_risk_treat_together",
          "text": "Treat them together. Work faster.",
          "tooltip": "+1 Medical Risk, +2 Soldier Rep.",
          "effects": {
            "medicalRisk": 1,
            "soldierRep": 2,
            "skillXp": { "Medicine": 20 }
          },
          "resultTextId": "treat_contagion_risk_treat_together_result",
          "resultText": "You work through them quickly. Risky, but you get ahead of it."
        },
        {
          "id": "report_captain",
          "textId": "treat_contagion_risk_report_captain",
          "text": "Report to {OFFICER_NAME} immediately.",
          "tooltip": "+2 Officer Rep. Let command decide.",
          "effects": {
            "officerRep": 2,
            "skillXp": { "Medicine": 16 }
          },
          "resultTextId": "treat_contagion_risk_report_captain_result",
