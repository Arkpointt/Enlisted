{
  "schemaVersion": 2,
  "order_type": "order_sentry_duty",
  "events": [
    {
      "id": "sentry_movement_spotted",
      "order_type": "order_sentry_duty",
      "category": "order_event",
      "severity": "attention",
      "titleId": "sentry_movement_spotted_title",
      "title": "Movement in the Dark",
      "setupId": "sentry_movement_spotted_setup",
      "setup": "You spot movement in the darkness beyond your position. Could be an animal. Could be an enemy scout.",
      "requirements": {
        "world_state": ["war_marching", "war_active_campaign", "siege_defending"]
      },
      "options": [
        {
          "id": "raise_alarm",
          "textId": "sentry_movement_spotted_raise_alarm",
          "text": "Raise the alarm immediately.",
          "effects": {
            "officerRep": 1
          },
          "resultTextId": "sentry_movement_spotted_raise_alarm_result",
          "resultText": "The camp responds. It was just a deer, but better safe than sorry."
        },
        {
          "id": "watch",
          "textId": "sentry_movement_spotted_watch",
          "text": "Watch carefully before deciding.",
          "effects": {
            "officerRep": 2
          },
          "resultTextId": "sentry_movement_spotted_watch_result",
          "resultText": "You identify it as an animal. No need to wake the camp."
        },
        {
          "id": "challenge",
          "textId": "sentry_movement_spotted_challenge",
          "text": "Challenge the movement.",
          "skillCheck": {
            "skill": "Perception",
            "difficulty": 40
          },
          "effects": {
            "officerRep": 2
          },
          "failEffects": {
            "hpChange": -8,
            "officerRep": 1
          },
          "resultTextId": "sentry_movement_spotted_challenge_result",
          "resultText": "Your challenge reveals nothing. You stay alert.",
          "failResultTextId": "sentry_movement_spotted_challenge_fail",
          "failResultText": "An arrow whistles past your head. You dive for cover and raise the alarm."
        }
      ]
    },
    {
      "id": "sentry_fell_asleep",
      "order_type": "order_sentry_duty",
      "category": "order_event",
      "severity": "attention",
      "titleId": "sentry_fell_asleep_title",
      "title": "Fighting Sleep",
      "setupId": "sentry_fell_asleep_setup",
      "setup": "Your eyelids are heavy. You catch yourself nodding off at your post. This is dangerous.",
      "requirements": {
        "world_state": ["peacetime_garrison", "peacetime_recruiting", "war_marching", "war_active_campaign", "siege_attacking", "siege_defending"]
      },
      "options": [
        {
          "id": "shake_off",
          "textId": "sentry_fell_asleep_shake_off",
          "text": "Shake it off and stay alert.",
          "effects": {
            "fatigue": 3
          },
          "resultTextId": "sentry_fell_asleep_shake_off_result",
          "resultText": "You force yourself awake. The rest of the watch is torture."
        },
        {
          "id": "report_self",
          "textId": "sentry_fell_asleep_report_self",
          "text": "Report yourself to {SERGEANT}.",
          "effects": {
            "officerRep": 1
          },
          "resultTextId": "sentry_fell_asleep_report_self_result",
          "resultText": "{SERGEANT} replaces you. He respects your honesty."
        },
        {
          "id": "hope",
          "textId": "sentry_fell_asleep_hope",
          "text": "Hope no one notices.",
          "effects": {
            "officerRep": -5
          },
          "resultTextId": "sentry_fell_asleep_hope_result",
          "resultText": "{SERGEANT} finds you asleep. You're in serious trouble."
        }
      ]
    },
    {
      "id": "sentry_challenged_approach",
      "order_type": "order_sentry_duty",
      "category": "order_event",
      "severity": "attention",
      "titleId": "sentry_challenged_approach_title",
      "title": "Approaching Figure",
      "setupId": "sentry_challenged_approach_setup",
      "setup": "A figure approaches your position in the darkness. Friend or foe?",
      "requirements": {
        "world_state": ["war_marching", "war_active_campaign"]
      },
      "options": [
        {
          "id": "challenge",
          "textId": "sentry_challenged_approach_challenge",
          "text": "Challenge them properly.",
          "effects": {
            "officerRep": 1
          },
          "resultTextId": "sentry_challenged_approach_challenge_result",
          "resultText": "It's {COMRADE_NAME} returning from patrol. Good protocol."
        },
        {
          "id": "wait",
          "textId": "sentry_challenged_approach_wait",
          "text": "Wait to see who it is.",
          "effects": {
            "officerRep": 0
          },
          "resultTextId": "sentry_challenged_approach_wait_result",
          "resultText": "It's one of ours. You should have challenged them."
        },
        {
          "id": "shoot",
          "textId": "sentry_challenged_approach_shoot",
          "text": "Shoot first, ask questions later.",
          "skillCheck": {
            "skill": "Perception",
            "difficulty": 40
          },
          "effects": {
            "officerRep": 2
          },
          "failEffects": {
            "officerRep": -5,
            "soldierRep": -5
          },
          "resultTextId": "sentry_challenged_approach_shoot_result",
          "resultText": "You drop an enemy scout. {SERGEANT} commends your vigilance.",
          "failResultTextId": "sentry_challenged_approach_shoot_fail",
          "failResultText": "You nearly kill {COMRADE_NAME}. Everyone is furious."
        }
      ]
    },
    {
      "id": "sentry_infiltrator",
      "order_type": "order_sentry_duty",
      "category": "order_event",
      "severity": "urgent",
      "titleId": "sentry_infiltrator_title",
      "title": "Infiltrator",
      "setupId": "sentry_infiltrator_setup",
      "setup": "You spot someone climbing the wall near your position. An infiltrator!",
      "requirements": {
        "world_state": ["siege_defending"]
      },
      "options": [
        {
          "id": "raise_alarm",
          "textId": "sentry_infiltrator_raise_alarm",
          "text": "Raise the alarm immediately.",
          "effects": {
            "officerRep": 1
          },
          "resultTextId": "sentry_infiltrator_raise_alarm_result",
          "resultText": "The camp responds. The infiltrator escapes but the breach is sealed."
        },
        {
          "id": "challenge",
          "textId": "sentry_infiltrator_challenge",
          "text": "Challenge them yourself.",
          "skillCheck": {
            "skill": "Perception",
            "difficulty": 35
          },
          "effects": {
            "officerRep": 2
          },
          "failEffects": {
            "hpChange": -8,
            "officerRep": 1
          },
          "resultTextId": "sentry_infiltrator_challenge_result",
          "resultText": "You confront them. They flee. You prevented a breach.",
          "failResultTextId": "sentry_infiltrator_challenge_fail",
          "failResultText": "They attack you. You fight them off but take a wound."
        },
        {
          "id": "shoot",
          "textId": "sentry_infiltrator_shoot",
          "text": "Shoot them down.",
          "effects": {
            "officerRep": 2
          },
          "resultTextId": "sentry_infiltrator_shoot_result",
          "resultText": "Your arrow finds its mark. The infiltrator falls."
        }
      ]
    },
    {
      "id": "sentry_relief_late",
      "order_type": "order_sentry_duty",
      "category": "order_event",
      "severity": "normal",
      "titleId": "sentry_relief_late_title",
      "title": "Late Relief",
      "setupId": "sentry_relief_late_setup",
      "setup": "Your relief is late. You're cold, tired, and your shift ended thirty minutes ago.",
      "requirements": {
        "world_state": ["peacetime_garrison", "peacetime_recruiting", "war_marching", "war_active_campaign", "siege_attacking", "siege_defending"]
      },
      "options": [
        {
          "id": "stay",
          "textId": "sentry_relief_late_stay",
          "text": "Stay at your post until they arrive.",
          "effects": {
            "fatigue": 5,
            "officerRep": 2
          },
          "resultTextId": "sentry_relief_late_stay_result",
          "resultText": "{COMRADE_NAME} finally arrives, apologizing. You held your post."
        },
        {
          "id": "complain",
          "textId": "sentry_relief_late_complain",
          "text": "Complain to {SERGEANT} about it.",
          "effects": {
            "fatigue": 3,
            "officerRep": -1,
            "escalation": {
              "discipline": 5
            }
          },
          "resultTextId": "sentry_relief_late_complain_result",
          "resultText": "{SERGEANT} is annoyed by your complaint. 'Just do your duty, soldier.'"
        },
        {
          "id": "leave",
          "textId": "sentry_relief_late_leave",
          "text": "Leave your post. You've done your time.",
          "effects": {
            "fatigue": 0,
            "officerRep": -8,
            "escalation": {
              "discipline": 15
            }
          },
          "resultTextId": "sentry_relief_late_leave_result",
          "resultText": "You abandon your post. {SERGEANT} finds it unmanned. Serious consequences follow."
        }
      ]
    }
  ]
}
