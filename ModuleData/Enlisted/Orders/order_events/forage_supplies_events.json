    {
      "id": "forage_rich_find",
      "order_type": "order_forage_supplies",
      "category": "order_event",
      "severity": "attention",
      "titleId": "forage_rich_find_title",
      "title": "Well-Stocked Barn",
      "setupId": "forage_rich_find_setup",
      "setup": "You find a barn, half-hidden in the trees. Inside: grain, smoked meat, preserved vegetables. A fortune in supplies.",
      "requirements": {
        "world_state": ["war_marching", "war_active_campaign"]
      },
      "options": [
        {
          "id": "take_needed",
          "textId": "forage_rich_find_take_needed",
          "text": "Take what the company needs. Leave the rest.",
          "tooltip": "+8 Food, +1 Officer Rep.",
          "effects": {
            "companyNeeds": {
              "Food": 8
            },
            "officerRep": 1
          },
          "resultTextId": "forage_rich_find_take_needed_result",
          "resultText": "You load the essentials and move on. Professional."
        },
        {
          "id": "take_everything",
          "textId": "forage_rich_find_take_everything",
          "text": "Take everything. Leave nothing for the enemy.",
          "tooltip": "+15 Food, -2 Officer Rep, +10 Discipline.",
          "effects": {
            "companyNeeds": {
              "Food": 15
            },
            "officerRep": -2,
            "escalation": {
              "discipline": 10
            }
          },
          "resultTextId": "forage_rich_find_take_everything_result",
          "resultText": "You strip it bare. Scorched earth. Effective, but hard on the locals."
        },
        {
          "id": "leave_payment",
          "textId": "forage_rich_find_leave_payment",
          "text": "Leave coins for the farmer.",
          "tooltip": "+5 Food, +2 Officer Rep. Honorable.",
          "effects": {
            "companyNeeds": {
              "Food": 5
            },
            "officerRep": 2,
            "gold": -10
          },
          "resultTextId": "forage_rich_find_leave_payment_result",
          "resultText": "You leave silver on the table. Soldiers aren't always thieves."
        }
      ]
    },
    {
