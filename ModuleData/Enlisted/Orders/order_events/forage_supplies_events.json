        {
          "id": "leave_empty",
          "textId": "forage_farmer_encounter_leave_empty",
          "text": "Leave empty-handed. Not worth the trouble.",
          "tooltip": "+1 Soldier Rep. Merciful.",
          "effects": {
            "soldierRep": 1
          },
          "resultTextId": "forage_farmer_encounter_leave_empty_result",
          "resultText": "You walk away. One less enemy. The company will find food elsewhere."
        }
      ]
    },
