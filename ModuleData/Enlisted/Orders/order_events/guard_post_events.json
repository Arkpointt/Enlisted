{
  "schemaVersion": 2,
  "order_type": "order_guard_post",
  "events": [
    {
      "id": "guard_drunk_soldier",
      "order_type": "order_guard_post",
      "category": "order_event",
      "severity": "normal",
      "titleId": "guard_drunk_soldier_title",
      "title": "Drunk Soldier",
      "setupId": "guard_drunk_soldier_setup",
      "setup": "A drunk soldier stumbles toward your post, demanding to pass. {SERGEANT} told you no one passes without authorization.",
      "requirements": {
        "world_state": ["peacetime_garrison", "war_active_campaign"]
      },
      "options": [
        {
          "id": "let_pass",
          "textId": "guard_drunk_soldier_let_pass",
          "text": "Let him through. Not worth the trouble.",
          "effects": {
            "officerRep": -1,
            "soldierRep": 1
          },
          "resultTextId": "guard_drunk_soldier_let_pass_result",
          "resultText": "He staggers past. You hope {SERGEANT} doesn't find out."
        },
        {
          "id": "turn_away",
          "textId": "guard_drunk_soldier_turn_away",
          "text": "Turn him away. Orders are orders.",
          "effects": {
            "officerRep": 1,
            "soldierRep": -1,
            "skillXp": { "Athletics": 12 }
          },
          "resultTextId": "guard_drunk_soldier_turn_away_result",
          "resultText": "He curses you but stumbles off. You held your post."
        },
        {
          "id": "report",
          "textId": "guard_drunk_soldier_report",
          "text": "Report him to {SERGEANT}.",
          "effects": {
            "officerRep": 2,
            "soldierRep": -2,
            "skillXp": { "Tactics": 10 }
          },
          "resultTextId": "guard_drunk_soldier_report_result",
          "resultText": "{SERGEANT} hauls him away. The other soldiers give you cold looks."
        }
      ]
    },
    {
      "id": "guard_strange_noise",
      "order_type": "order_guard_post",
      "category": "order_event",
      "severity": "attention",
      "titleId": "guard_strange_noise_title",
      "title": "Strange Noise",
      "setupId": "guard_strange_noise_setup",
      "setup": "You hear a strange noise in the darkness beyond your post. Could be nothing. Could be trouble.",
      "requirements": {
        "world_state": ["war_marching", "war_active_campaign", "siege_defending"]
      },
      "options": [
        {
          "id": "investigate",
          "textId": "guard_strange_noise_investigate",
          "text": "Investigate the noise.",
          "skillCheck": {
            "skill": "Perception",
            "difficulty": 35
          },
          "effects": {
            "officerRep": 2,
            "skillXp": { "Scouting": 20 }
          },
          "failEffects": {
            "hpChange": -5,
            "officerRep": 1,
            "skillXp": { "Scouting": 8 }
          },
          "resultTextId": "guard_strange_noise_investigate_result",
          "resultText": "You find a stray dog. Better safe than sorry.",
          "failResultTextId": "guard_strange_noise_investigate_fail",
          "failResultText": "You trip in the dark and bash your shin. Nothing there."
        },
        {
          "id": "hold_post",
          "textId": "guard_strange_noise_hold_post",
          "text": "Hold your post and watch.",
          "effects": {
            "officerRep": 1,
            "skillXp": { "Tactics": 12 }
          },
          "resultTextId": "guard_strange_noise_hold_post_result",
          "resultText": "The noise fades. You stay alert."
        },
        {
          "id": "raise_alarm",
          "textId": "guard_strange_noise_raise_alarm",
          "text": "Raise the alarm.",
          "effects": {
            "officerRep": -1
          },
          "resultTextId": "guard_strange_noise_raise_alarm_result",
          "resultText": "The camp wakes. Nothing found. {SERGEANT} is not pleased."
        }
      ]
    },
    {
