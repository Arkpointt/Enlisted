          "skillCheck": {
            "skill": "Charm",
            "difficulty": 30
          },
          "effects": {
            "officerRep": 2,
            "skillXp": { "Charm": 20 }
          },
          "failEffects": {
            "officerRep": 1,
            "escalation": {
              "scrutiny": 5
            },
            "skillXp": { "Charm": 8 }
          },
          "resultTextId": "guard_noble_demands_challenge_result",
          "resultText": "He's annoyed but respects your duty. {SERGEANT} approves.",
          "failResultTextId": "guard_noble_demands_challenge_fail",
          "failResultText": "He storms off angry. You held your post, but he'll complain."
        },
        {
          "id": "fetch_officer",
          "textId": "guard_noble_demands_fetch_officer",
          "text": "Fetch {OFFICER_NAME} to handle this.",
          "effects": {
            "officerRep": 1,
            "skillXp": { "Tactics": 10 }
          },
          "resultTextId": "guard_noble_demands_fetch_officer_result",
          "resultText": "{OFFICER_NAME} handles it. You followed procedure."
        }
      ]
    },
