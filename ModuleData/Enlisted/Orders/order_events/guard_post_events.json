      "requirements": {
        "world_state": ["peacetime_garrison", "war_marching", "war_active_campaign"]
      },
      "options": [
        {
          "id": "challenge",
          "textId": "guard_officer_inspection_challenge",
          "text": "Challenge him properly.",
          "effects": {
            "officerRep": 4,
            "skillXp": { "Tactics": 18 }
          },
          "resultTextId": "guard_officer_inspection_challenge_result",
          "resultText": "He smiles. 'Good work, {PLAYER_RANK}. You know your duty.'"
        },
        {
          "id": "let_pass",
          "textId": "guard_officer_inspection_let_pass",
          "text": "Let him pass without challenge.",
          "effects": {
            "officerRep": -3
          },
          "resultTextId": "guard_officer_inspection_let_pass_result",
          "resultText": "He stops. 'You failed the test, soldier. Challenge everyone.'"
        },
        {
          "id": "hesitate",
          "textId": "guard_officer_inspection_hesitate",
          "text": "Hesitate, unsure what to do.",
          "effects": {
            "officerRep": -1
          },
          "resultTextId": "guard_officer_inspection_hesitate_result",
          "resultText": "Your hesitation shows. He walks past shaking his head."
        }
      ]
    },
    {
