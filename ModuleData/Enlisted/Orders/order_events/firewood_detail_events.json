    {
      "id": "firewood_axe_slip",
      "order_type": "order_firewood_detail",
      "category": "order_event",
      "severity": "attention",
      "titleId": "firewood_axe_slip_title",
      "title": "Axe Slip",
      "setupId": "firewood_axe_slip_setup",
      "setup": "The axe slips. Blood wells from your hand. Not deep, but it stings.",
      "requirements": {
        "world_state": ["peacetime_garrison", "peacetime_recruiting", "war_marching", "war_active_campaign", "siege_attacking", "siege_defending"]
      },
      "options": [
        {
          "id": "quick_fix",
          "textId": "firewood_axe_slip_quick_fix",
          "text": "Wrap it and keep working.",
          "skillCheck": {
            "skill": "Athletics",
            "difficulty": 35
          },
          "effects": {
            "hpChange": -8,
            "medicalRisk": 1
          },
          "failEffects": {
            "hpChange": -12,
            "medicalRisk": 2
          },
          "resultTextId": "firewood_axe_slip_quick_fix_result",
          "resultText": "You bind it tight. Hurts, but you finish the job.",
          "failResultTextId": "firewood_axe_slip_quick_fix_fail",
          "failResultText": "The cut's deeper than you thought. Blood soaks through the bandage."
        },
        {
          "id": "report",
          "textId": "firewood_axe_slip_report",
          "text": "Report to the surgeon.",
          "effects": {
            "hpChange": -3
          },
          "resultTextId": "firewood_axe_slip_report_result",
          "resultText": "The surgeon cleans and binds it properly. You're back to work soon."
        },
        {
          "id": "push_through",
          "textId": "firewood_axe_slip_push_through",
          "text": "Ignore it. Keep chopping.",
          "effects": {
            "hpChange": -15,
            "medicalRisk": 2
          },
          "resultTextId": "firewood_axe_slip_push_through_result",
          "resultText": "Blood drips down the axe handle. You finish, but the wound looks angry."
        }
      ]
    },
    {
