          "id": "break_up",
          "textId": "patrol_soldier_fight_break_up",
          "text": "Break it up yourself.",
          "skillCheck": {
            "skill": "Athletics",
            "difficulty": 35
          },
          "effects": {
            "soldierRep": 1,
            "officerRep": 1,
            "skillXp": { "Athletics": 22 }
