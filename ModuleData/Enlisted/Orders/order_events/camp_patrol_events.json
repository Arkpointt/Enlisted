      "titleId": "patrol_soldier_fight_title",
      "title": "Soldiers Fighting",
      "setupId": "patrol_soldier_fight_setup",
      "setup": "Two soldiers are throwing punches behind the supply tents. Blood's already been drawn.",
      "requirements": {
        "world_state": ["peacetime_garrison", "war_marching", "war_active_campaign"],
        "notAtSea": true
      },
