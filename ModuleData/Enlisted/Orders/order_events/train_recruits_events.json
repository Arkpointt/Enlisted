{
  "schemaVersion": 2,
  "order_type": "order_train_recruits",
  "events": [
    {
      "id": "train_difficult_recruit",
      "order_type": "order_train_recruits",
      "category": "order_event",
      "severity": "attention",
      "titleId": "train_difficult_recruit_title",
      "title": "Difficult Recruit",
      "setupId": "train_difficult_recruit_setup",
      "setup": "One recruit refuses to follow instructions. Arms crossed, jaw set. The others are watching to see what you do.",
      "requirements": {
        "world_state": [
          "peacetime_garrison"
        ]
      },
      "options": [
        {
          "id": "patience",
          "textId": "train_difficult_recruit_patience",
          "text": "Take him aside. Find out what's wrong.",
          "tooltip": "+2 Soldier Rep, +1 Officer Rep, +8 Leadership XP.",
          "skillCheck": {
            "skill": "Leadership",
            "difficulty": 45
          },
          "effects": {
            "skillXp": {
              "Leadership": 8
            },
            "lordReputation": 2
          },
          "failEffects": {
            "skillXp": {
              "Leadership": 5
            },
            "lordReputation": 0
          },
          "resultTextId": "train_difficult_recruit_patience_result",
          "resultText": "He's scared. Hiding it behind bravado. You talk him through it. He falls in line.",
          "failResultTextId": "train_difficult_recruit_patience_fail",
          "failResultText": "He listens, but you don't reach him. At least he's not causing trouble."
        },
        {
          "id": "discipline",
          "textId": "train_difficult_recruit_discipline",
          "text": "Extra drills until his attitude improves.",
          "tooltip": "-1 Soldier Rep, +2 Officer Rep, +5 Leadership XP.",
          "effects": {
            "skillXp": {
              "Leadership": 5
            },
            "lordReputation": 2
          },
          "resultTextId": "train_difficult_recruit_discipline_result",
          "resultText": "He drills until his arms shake. The defiance fades to exhaustion."
        },
        {
          "id": "make_example",
          "textId": "train_difficult_recruit_make_example",
          "text": "Make an example of him. The others need to see consequences.",
          "tooltip": "-3 Soldier Rep, +3 Officer Rep, +3 Leadership XP.",
          "effects": {
            "skillXp": {
              "Leadership": 3
            },
            "lordReputation": 2
          },
          "resultTextId": "train_difficult_recruit_make_example_result",
          "resultText": "Latrine duty for a week. He seethes, but the others snap to attention."
        }
      ]
    },
    {
      "id": "train_injury_during",
      "order_type": "order_train_recruits",
      "category": "order_event",
      "severity": "attention",
      "titleId": "train_injury_during_title",
      "title": "Training Injury",
      "setupId": "train_injury_during_setup",
      "setup": "A recruit goes down hard. He's clutching his arm, face white with pain. The others freeze.",
      "requirements": {
        "world_state": [
          "peacetime_garrison"
        ]
      },
      "options": [
        {
          "id": "stop_treat",
          "textId": "train_injury_during_stop_treat",
          "text": "Stop training. Treat him properly.",
          "tooltip": "+1 Medical Risk, +2 Soldier Rep, +3 fatigue.",
          "skillCheck": {
            "skill": "Medicine",
            "difficulty": 35
          },
          "effects": {
            "medicalRisk": 1,
            "fatigue": 3,
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": 1
          },
          "failEffects": {
            "medicalRisk": 2,
            "fatigue": 5,
            "skillXp": {
              "Leadership": 11,
              "Tactics": 8
            },
            "lordReputation": 0
          },
          "resultTextId": "train_injury_during_stop_treat_result",
          "resultText": "You set the bone and bind it tight. He'll mend. The others see you care.",
          "failResultTextId": "train_injury_during_stop_treat_fail",
          "failResultText": "Your field medicine is rough, but he's stable. Someone fetch the surgeon."
        },
        {
          "id": "continue_carefully",
          "textId": "train_injury_during_continue_carefully",
          "text": "Send him off. Continue training more carefully.",
          "tooltip": "+1 Soldier Rep, +5 fatigue.",
          "effects": {
            "fatigue": 5,
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": 0
          },
          "resultTextId": "train_injury_during_continue_carefully_result",
          "resultText": "You send him to the surgeon and slow down the drills. Balance."
        },
        {
          "id": "push_through",
          "textId": "train_injury_during_push_through",
          "text": "Push through. Training stops for nothing.",
          "tooltip": "+2 Medical Risk, -2 Soldier Rep, +8 fatigue.",
          "effects": {
            "medicalRisk": 2,
            "fatigue": 8,
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": -1
          },
          "resultTextId": "train_injury_during_push_through_result",
          "resultText": "'Walk it off!' He limps to the side. The drills continue. Harsh lesson."
        }
      ]
    },
    {
      "id": "train_impressive_performance",
      "order_type": "order_train_recruits",
      "category": "order_event",
      "severity": "positive",
      "titleId": "train_impressive_performance_title",
      "title": "Natural Talent",
      "setupId": "train_impressive_performance_setup",
      "setup": "One recruit stands out. Quick learner, good instincts. He's better than the others by a wide margin.",
      "requirements": {
        "world_state": [
          "peacetime_garrison"
        ]
      },
      "options": [
        {
          "id": "praise_publicly",
          "textId": "train_impressive_performance_praise_publicly",
          "text": "Praise him in front of everyone.",
          "tooltip": "+2 Soldier Rep, +1 Officer Rep.",
          "effects": {
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": 2
          },
          "resultTextId": "train_impressive_performance_praise_publicly_result",
          "resultText": "'This is what I want to see!' The recruit stands taller. The others take note."
        },
        {
          "id": "note_quietly",
          "textId": "train_impressive_performance_note_quietly",
          "text": "Note it quietly. Tell {SERGEANT} later.",
          "tooltip": "+1 Soldier Rep, +2 Officer Rep.",
          "effects": {
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": 2
          },
          "resultTextId": "train_impressive_performance_note_quietly_result",
          "resultText": "You mention it to {SERGEANT} after. 'I'll keep an eye on that one.'"
        },
        {
          "id": "extra_training",
          "textId": "train_impressive_performance_extra_training",
          "text": "Give him extra challenges. Push his limits.",
          "tooltip": "+3 Soldier Rep, +2 Officer Rep.",
          "effects": {
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": 3
          },
          "resultTextId": "train_impressive_performance_extra_training_result",
          "resultText": "You pair him with veterans. He rises to every challenge. One to watch."
        }
      ]
    },
    {
      "id": "train_officer_observes",
      "order_type": "order_train_recruits",
      "category": "order_event",
      "severity": "attention",
      "titleId": "train_officer_observes_title",
      "title": "Officer Watching",
      "setupId": "train_officer_observes_setup",
      "setup": "{OFFICER_NAME} appears at the edge of the training ground. Arms crossed, watching your methods.",
      "requirements": {
        "world_state": [
          "peacetime_garrison"
        ]
      },
      "options": [
        {
          "id": "stick_basics",
          "textId": "train_officer_observes_stick_basics",
          "text": "Stick to the basics. By the book.",
          "tooltip": "+2 Officer Rep. Safe choice.",
          "effects": {
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": 2
          },
          "resultTextId": "train_officer_observes_stick_basics_result",
          "resultText": "Standard drills, properly executed. He nods and walks away. Good enough."
        },
        {
          "id": "show_off",
          "textId": "train_officer_observes_show_off",
          "text": "Show off. Demonstrate your best techniques.",
          "tooltip": "+4 Officer Rep, +2 Lord Rep. Uses Leadership.",
          "skillCheck": {
            "skill": "Leadership",
            "difficulty": 50
          },
          "effects": {
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": 6
          },
          "failEffects": {
            "skillXp": {
              "Leadership": 11,
              "Tactics": 8
            },
            "lordReputation": 1
          },
          "resultTextId": "train_officer_observes_show_off_result",
          "resultText": "You run them through complex formations. Impressive work. He's smiling.",
          "failResultTextId": "train_officer_observes_show_off_fail",
          "failResultText": "The recruits fumble your advanced drill. Embarrassing."
        },
        {
          "id": "ask_guidance",
          "textId": "train_officer_observes_ask_guidance",
          "text": "Ask for his guidance.",
          "tooltip": "-1 Officer Rep, +1 Lord Rep. Humble.",
          "effects": {
            "skillXp": {
              "Leadership": 22,
              "Tactics": 16
            },
            "lordReputation": 0
          },
          "resultTextId": "train_officer_observes_ask_guidance_result",
          "resultText": "He steps in and demonstrates a technique. You learn something new."
        }
      ]
    },
    {
      "id": "train_recruit_question",
      "order_type": "order_train_recruits",
      "category": "order_event",
      "severity": "normal",
      "titleId": "train_recruit_question_title",
      "title": "Hard Question",
      "setupId": "train_recruit_question_setup",
      "setup": "During a break, a recruit approaches. 'What's it like? Killing a man, I mean.'",
      "requirements": {
        "world_state": [
          "peacetime_garrison"
        ]
      },
      "options": [
        {
          "id": "answer_honestly",
          "textId": "train_recruit_question_answer_honestly",
          "text": "Answer honestly. He deserves the truth.",
          "tooltip": "+3 Soldier Rep, +5 Leadership XP.",
          "effects": {
            "skillXp": {
              "Leadership": 5
            },
            "lordReputation": 1
          },
          "resultTextId": "train_recruit_question_answer_honestly_result",
          "resultText": "You tell him the truth. It's not pretty. He nods, thoughtful. Better he knows."
        },
        {
          "id": "deflect",
          "textId": "train_recruit_question_deflect",
          "text": "Change the subject. Not the time for this.",
          "tooltip": "+1 Soldier Rep, +3 Leadership XP.",
          "effects": {
            "skillXp": {
              "Leadership": 3
            },
            "lordReputation": 0
          },
          "resultTextId": "train_recruit_question_deflect_result",
          "resultText": "'Ask me after your first battle.' He accepts the deflection. For now."
        },
        {
          "id": "harsh_truth",
          "textId": "train_recruit_question_harsh_truth",
          "text": "Give him the harsh truth. No sugarcoating.",
          "tooltip": "+2 Soldier Rep, +8 Leadership XP.",
          "effects": {
            "skillXp": {
              "Leadership": 8
            },
            "lordReputation": 1
          },
          "resultTextId": "train_recruit_question_harsh_truth_result",
          "resultText": "'It's messy. It's loud. And it stays with you.' He goes pale, but he needed to hear it."
        }
      ]
    }
  ]
}