      "requirements": {
        "world_state": [
          "peacetime_garrison",
          "siege_defending"
        ],
        "notAtSea": true
      },
      "options": [
        {
          "id": "propose_formally",
          "textId": "inspect_improvement_idea_propose_formally",
          "text": "Propose it formally to the officers.",
          "tooltip": "+4 Lord Rep, +2 Officer Rep, +15 Engineering XP.",
          "skillCheck": {
            "skill": "Engineering",
            "difficulty": 50
          },
          "effects": {
            "skillXp": {
              "Engineering": 15
            },
            "lordReputation": 6
          },
          "failEffects": {
            "skillXp": {
              "Engineering": 5
            },
            "lordReputation": 1
          },
          "resultTextId": "inspect_improvement_idea_propose_formally_result",
          "resultText": "You present your idea to the council. They're impressed. Work begins within the week.",
          "failResultTextId": "inspect_improvement_idea_propose_formally_fail",
          "failResultText": "They listen but aren't convinced. Maybe another time."
        },
        {
          "id": "suggest_quietly",
          "textId": "inspect_improvement_idea_suggest_quietly",
          "text": "Mention it quietly to {SERGEANT}.",
          "tooltip": "+2 Lord Rep, +3 Officer Rep, +10 Engineering XP.",
          "effects": {
            "skillXp": {
              "Engineering": 10
            },
            "lordReputation": 5
          },
          "resultTextId": "inspect_improvement_idea_suggest_quietly_result",
          "resultText": "{SERGEANT} nods slowly. 'Not bad. I'll mention it to the captain.' Credit may or may not come your way."
        },
        {
          "id": "keep_silent",
          "textId": "inspect_improvement_idea_keep_silent",
          "text": "Keep it to yourself. Not your place to suggest.",
          "tooltip": "No reward. Safe.",
          "effects": {
            "skillXp": {
              "Engineering": 18,
              "Tactics": 12
            }
          },
          "resultTextId": "inspect_improvement_idea_keep_silent_result",
          "resultText": "You note it and move on. Maybe someone else will see it too."
        }
      ]
    }
  ]
}