{
  "schemaVersion": 1,
  "enabled": true,
  "menus": {
    "enlisted_status": {
      "id": "enlisted_status",
      "title_key": "{=enlisted_status_title}Enlisted Status",
      "description": "Main enlisted soldier interface showing service status and available actions",
      "text": "Lord: {LORD_NAME} ({FACTION_NAME})\nRank: {PLAYER_RANK} (Tier {TIER})\nFormation: {FORMATION_DISPLAY} ({FORMATION_TYPE})\nService Duration: {SERVICE_DAYS} days ({RETIREMENT_COUNTDOWN})\n\nCurrent Duties:\n{ACTIVE_DUTIES}\n\nNext Promotion: {CURRENT_XP}/{NEXT_XP} XP\nDaily Wage: {DAILY_WAGE}{GOLD_ICON}\n\nArmy Status: {ARMY_STATUS}\n{CURRENT_OBJECTIVE}",
      "overlay": "None",
      "flags": "None",
      "background_mesh": null
    },
    "enlisted_troop_selection": {
      "id": "enlisted_troop_selection", 
      "title_key": "{=promotion_title}Military Advancement",
      "description": "Choose your troop advancement from real Bannerlord troops",
      "text": "Current Assignment: {CURRENT_TROOP}\nPromotion Available: Tier {NEXT_TIER}\n\nChoose your advancement:\n\n{AVAILABLE_TROOPS}\n\nPress 'P' when promotion notification appears to access this menu.",
      "overlay": "None",
      "flags": "None"
    },
    "enlisted_record": {
      "id": "enlisted_record",
      "title_key": "{=service_record_title}Service Record", 
      "description": "Detailed service history and progression tracking",
      "text": "Experience Breakdown:\n{XP_BREAKDOWN}\n\nRelationships:\n{RELATIONSHIP_STATUS}\n\nBattle History:\n{BATTLE_STATISTICS}\n\nFormation Progress:\n{FORMATION_DETAILS}\n\nService Details:\n{SERVICE_INFORMATION}",
      "overlay": "None",
      "flags": "None"
    },
    "enlisted_camp_hub": {
      "id": "enlisted_camp_hub",
      "title_key": "{=ct_title}Camp",
      "description": "Camp hub for decisions, service records, companions, and leaving service actions",
      "text": "{=ct_menu_intro}The canvas flaps in the breeze. Maps and tallies cover a makeshift table. Your small corner of the army's camp.",
      "overlay": "None",
      "flags": "None"
    },
    "enlisted_service_records": {
      "id": "enlisted_service_records",
      "title_key": "{=ct_records_title}Service Records",
      "description": "View current posting, faction history, and lifetime service statistics",
      "text": "{=ct_records_intro}Your service history and military records are catalogued here.",
      "overlay": "None",
      "flags": "None"
    },
    "enlisted_current_posting": {
      "id": "enlisted_current_posting",
      "title_key": "{=ct_current_title}Current Posting",
      "description": "Details of current enlistment term",
      "text": "{CURRENT_POSTING_TEXT}",
      "overlay": "None",
      "flags": "None"
    },
    "enlisted_faction_records": {
      "id": "enlisted_faction_records",
      "title_key": "{=ct_faction_title}Faction Records",
      "description": "Service history for each faction served",
      "text": "{FACTION_RECORDS_TEXT}",
      "overlay": "None",
      "flags": "None"
    },
    "enlisted_lifetime_summary": {
      "id": "enlisted_lifetime_summary",
      "title_key": "{=ct_lifetime_title}Lifetime Summary",
      "description": "Cross-faction career statistics",
      "text": "{LIFETIME_SUMMARY_TEXT}",
      "overlay": "None",
      "flags": "None"
    }
  },
  "menu_options": {
    "field_medical": {
      "id": "enlisted_field_medical",
      "display_text": "Request field medical treatment",
      "description": "Army medics treat wounds (Cooldown: {COOLDOWN_STATUS})",
      "leave_type": "Wait",
      "priority": 100,
      "enabled_conditions": ["enlisted", "wounded", "cooldown_expired"],
      "disabled_tooltips": {
        "healthy": "You are at full health.",
        "cooldown": "Must wait {DAYS} more days for medical supplies.",
        "not_enlisted": "Only available to enlisted soldiers."
      }
    },
    "speak_with_lord": {
      "id": "enlisted_speak_lord",
      "display_text": "Speak with lord about duties", 
      "description": "Discuss duty assignments and service matters",
      "leave_type": "Conversation",
      "priority": 110,
      "enabled_conditions": ["enlisted", "lord_alive", "lord_accessible"]
    },
    "visit_quartermaster": {
      "id": "enlisted_quartermaster",
      "display_text": "Visit the quartermaster",
      "description": "Access troop advancement and promotion",
      "leave_type": "Trade", 
      "priority": 120,
      "enabled_conditions": ["enlisted"],
      "target_menu": "enlisted_troop_selection"
    },
    "service_record": {
      "id": "enlisted_record",
      "display_text": "View detailed service record",
      "description": "Review progression and service history",
      "leave_type": "Default",
      "priority": 130, 
      "enabled_conditions": ["enlisted"],
      "target_menu": "enlisted_record"
    },
    "request_retirement": {
      "id": "request_retirement",
      "display_text": "Request honorable retirement",
      "description": "End military service with veteran benefits",
      "leave_type": "Conversation",
      "priority": 140,
      "enabled_conditions": ["enlisted", "retirement_eligible"],
      "disabled_tooltips": {
        "not_eligible": "Must serve {DAYS} more days to be eligible for retirement."
      }
    },
    "return_to_duties": {
      "id": "return_to_duties",
      "display_text": "Return to duties",
      "description": "Close menu and continue following lord", 
      "leave_type": "Leave",
      "priority": 999,
      "enabled_conditions": ["always"]
    },
    "apply_equipment": {
      "id": "apply_equipment",
      "display_text": "Apply selected equipment ({COST}{GOLD_ICON})",
      "description": "Equip selected troop equipment style",
      "leave_type": "Trade",
      "priority": 200,
      "enabled_conditions": ["can_afford", "selection_made"],
      "disabled_tooltips": {
        "cannot_afford": "You cannot afford this equipment ({COST}{GOLD_ICON}).",
        "no_selection": "Select equipment first."
      }
    },
    "restore_personal": {
      "id": "restore_personal",
      "display_text": "Restore personal equipment (FREE)",
      "description": "Return to your original equipment",
      "leave_type": "Trade", 
      "priority": 210,
      "enabled_conditions": ["has_personal_backup"]
    },
    "back_to_status": {
      "id": "back_to_status",
      "display_text": "Back to enlisted status",
      "description": "Return to main enlisted menu",
      "leave_type": "Leave",
      "priority": 999,
      "target_menu": "enlisted_status"
    },
    "camp_hub": {
      "id": "enlisted_camp_hub",
      "display_text": "{=ct_menu_enter}Camp",
      "description": "Open the Camp hub (decisions, service records, companions, and leaving service)",
      "leave_type": "Submenu",
      "priority": 45,
      "enabled_conditions": ["enlisted"],
      "target_menu": "enlisted_camp_hub"
    },
    "ct_service_records": {
      "id": "ct_service_records",
      "display_text": "{=ct_option_records}Review service records",
      "description": "View current posting, faction history, and lifetime statistics",
      "leave_type": "Submenu",
      "priority": 1,
      "target_menu": "enlisted_service_records"
    },
    "ct_retinue": {
      "id": "ct_retinue",
      "display_text": "{=ct_option_retinue}Muster personal retinue",
      "description": "Request soldiers to command (Tier 4+ only)",
      "leave_type": "Submenu",
      "priority": 2,
      "enabled_conditions": ["enlisted", "tier_4_or_higher"],
      "disabled_tooltips": {
        "tier_locked": "{=ct_warn_tier_locked}You must reach Tier 4 to command soldiers."
      }
    },
    "ct_back": {
      "id": "ct_back",
      "display_text": "{=ct_option_back}Return to camp",
      "description": "Return to enlisted status menu",
      "leave_type": "Leave",
      "priority": 100,
      "target_menu": "enlisted_status"
    },
    "ct_current_posting": {
      "id": "ct_current_posting",
      "display_text": "{=ct_option_current}Current Posting",
      "description": "View details of your current enlistment",
      "leave_type": "Submenu",
      "priority": 1,
      "enabled_conditions": ["enlisted"],
      "target_menu": "enlisted_current_posting"
    },
    "ct_faction_records": {
      "id": "ct_faction_records",
      "display_text": "{=ct_option_faction}Faction Records",
      "description": "View service history for each faction",
      "leave_type": "Submenu",
      "priority": 2,
      "target_menu": "enlisted_faction_records"
    },
    "ct_lifetime_summary": {
      "id": "ct_lifetime_summary",
      "display_text": "{=ct_option_lifetime}Lifetime Summary",
      "description": "View cross-faction career statistics",
      "leave_type": "Submenu",
      "priority": 3,
      "target_menu": "enlisted_lifetime_summary"
    },
    "ct_back_records": {
      "id": "ct_back_records",
      "display_text": "{=ct_back_records}Back to Service Records",
      "description": "Return to service records menu",
      "leave_type": "Leave",
      "priority": 100,
      "target_menu": "enlisted_service_records"
    },
    "ct_back_tent": {
      "id": "ct_back_tent",
      "display_text": "{=ct_back_tent}Back to Camp",
      "description": "Return to Camp menu",
      "leave_type": "Leave",
      "priority": 100,
      "target_menu": "enlisted_camp_hub"
    }
  },
  "text_variables": {
    "icons": {
      "gold": "<img src=\"General\\\\Icons\\\\Coin@2x\" extend=\"8\">",
      "formation_infantry": "INF",
      "formation_archer": "ARC",
      "formation_cavalry": "CAV",
      "formation_horsearcher": "HARC"
    },
    "cooldown_messages": {
      "available": "Available",
      "standard_cooldown": "{DAYS} days remaining",
      "field_medic_cooldown": "{DAYS} days remaining (Medic)"
    },
    "equipment_status": {
      "equipped": "[EQUIPPED]",
      "available": "OK",
      "too_expensive": "(Too expensive)",
      "tier_locked": "(Tier {REQUIRED} required)"
    }
  },
  "ui_settings": {
    "max_equipment_choices_displayed": 12,
    "show_tier_progression": true,
