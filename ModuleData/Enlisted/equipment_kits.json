{
  "schemaVersion": 1,
  "enabled": false,
  "_deprecated": "SYSTEM CHANGE: Switched to SAS troop selection approach - custom equipment kits no longer used",
  "_new_system": "Players select from real Bannerlord troops; equipment extracted from CharacterObject.BattleEquipments",
  "troop_selection_system": {
    "_description": "NEW SYSTEM: Players choose from real Bannerlord troops instead of custom kits",
    "equipment_policy": {
      "_important": "EQUIPMENT REPLACEMENT SYSTEM - Player does NOT accumulate all equipment",
      "promotion_behavior": "Equipment REPLACED with new troop's gear (not added to inventory)",
      "retirement_benefit": "Player keeps FINAL equipment only (Tier 7 veteran gear)",
      "rationale": "Realistic military service - turn in old equipment, receive new equipment"
    },
    "promotion_notification": {
      "message": "Promotion available! Press 'P' to advance your military career.",
      "sound": "event:/ui/notification/levelup",
      "key_binding": "P"
    },
    "troop_discovery": {
      "api": "MBObjectManager.Instance.GetObjectTypeList<CharacterObject>()",
      "culture_filter": "EnlistmentBehavior.Instance.CurrentLord.Culture.StringId",
      "tier_filter": "character.Tier == targetTier",
      "soldier_filter": "character.IsSoldier == true"
    },
    "equipment_assignment": {
      "source": "selectedTroop.BattleEquipments.FirstOrDefault()",
      "api": "EquipmentHelper.AssignHeroEquipmentFromEquipment(hero, equipment)"
    },
    "formation_detection": {
      "horse_archer": "troop.IsRanged && troop.IsMounted",
      "cavalry": "!troop.IsRanged && troop.IsMounted", 
      "archer": "troop.IsRanged && !troop.IsMounted",
      "infantry": "!troop.IsRanged && !troop.IsMounted"
    }
  },
