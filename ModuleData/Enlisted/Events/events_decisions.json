    {
      "id": "decision_lord_hunt_invitation",
      "category": "decision",
      "narrative_source": "lord",
      "delivery": {
        "method": "automatic",
        "channel": "inquiry",
        "menu_section": "social"
      },
      "triggers": {
        "all": [
          "is_enlisted",
          "not_in_settlement"
        ],
        "time_of_day": [
          "morning",
          "afternoon"
        ]
      },
      "requirements": {
        "tier": {
          "min": 5,
          "max": 999
        }
      },
      "timing": {
        "cooldown_days": 14,
        "priority": "normal",
        "one_time": false
      },
      "titleId": "decision_lord_hunt_title",
      "title": "Invitation to Hunt",
      "setupId": "decision_lord_hunt_body",
      "setup": "{LORD_NAME} is organizing a hunting party. A messenger approaches you with an invitation. The Lord's hunts are known for good sport and fine company - though they can be tiring affairs.",
      "options": [
        {
          "id": "accept",
          "textId": "decision_lord_hunt_accept",
          "costs": {
            "fatigue": 2
          },
          "text": "\"I am honored, my Lord. I shall attend.\"",
          "resultTextId": "decision_lord_hunt_accept_outcome",
          "resultText": "You spend the day riding with {LORD_NAME}'s party. The hunt is successful - deer are brought down, and the mood is jovial. As the party returns, {LORD_NAME} offers you your share.",
          "reward_choices": {
            "type": "compensation",
            "prompt": "How do you handle your share of the hunt?",
            "options": [
              {
                "id": "take_share",
                "text": "Accept your share (+30 gold)",
                "tooltip": "Take the meat and pelts as payment - practical and profitable",
                "rewards": {
                  "gold": 30
                }
              },
              {
                "id": "decline_payment",
                "text": "Decline - it was an honor to attend (+5 Camp Rep, +2 Scrutiny reduction)",
                "tooltip": "Show loyalty and ambition over coin - builds favor with the Lord",
                "effects": {
                  "camp_reputation": 5,
                  "scrutiny": -2
                }
              },
              {
                "id": "modest_payment",
                "text": "Accept modest share (+15 gold, +2 Camp Rep)",
                "tooltip": "A balanced approach - some profit, some goodwill",
                "rewards": {
                  "gold": 15
                },
                "effects": {
                  "camp_reputation": 2,
                  "scrutiny": -1
                }
              }
            ]
          }
        },
        {
          "id": "decline_politely",
          "textId": "decision_lord_hunt_decline",
          "text": "\"I am grateful for the honor, but duty keeps me at camp.\"",
          "resultTextId": "decision_lord_hunt_decline_outcome",
          "resultText": "The messenger nods and departs. Perhaps another time."
        }
      ]
    },
    {
      "id": "decision_lance_mate_dice",
      "category": "decision",
      "narrative_source": "lance_mate",
      "delivery": {
        "method": "automatic",
        "channel": "inquiry",
        "menu_section": "social"
      },
      "triggers": {
        "all": [
          "is_enlisted",
          "current_activity:rest"
        ],
        "time_of_day": [
          "dusk",
          "night"
        ]
      },
      "requirements": {
        "tier": {
          "min": 1,
          "max": 999
        }
      },
      "timing": {
        "cooldown_days": 7,
        "priority": "low"
      },
      "titleId": "decision_dice_title",
      "title": "Evening Dice Game",
      "setupId": "decision_dice_body",
      "setup": "{COMRADE_NAME} waves you over to a group gathered around a small fire. \"Come on, {PLAYER_RANK}! We need fresh gold in the pot.\" The dice game looks lively, and you could use some relaxation.",
      "options": [
        {
          "id": "join_careful",
          "textId": "decision_dice_join_careful",
          "costs": {
            "gold": 10
          },
          "rewards": {
            "gold": 20
          },
          "effects": {
            "camp_reputation": 1,
            "scrutiny": 1
          },
          "text": "\"Deal me in - small stakes only.\"",
          "resultTextId": "decision_dice_join_outcome",
          "resultText": "Lady luck favors you tonight. You walk away with your stake doubled and a few new friends."
        },
        {
          "id": "join_bold",
          "textId": "decision_dice_join_bold",
          "costs": {
            "gold": 50
          },
          "condition": "gold >= 50",
          "rewards": {
            "gold": 120
          },
          "effects": {
            "camp_reputation": 2,
            "scrutiny": 2,
            "discipline": 1
          },
          "text": "\"I'm feeling lucky. High stakes.\"",
          "resultTextId": "decision_dice_bold_outcome",
          "resultText": "The dice fly, the gold flows. You take the pot with a winning streak that has the whole camp talking."
        },
        {
          "id": "decline",
          "textId": "decision_dice_decline",
          "text": "\"Not tonight. I need my rest.\"",
          "resultTextId": "decision_dice_decline_outcome",
          "resultText": "You retire to your tent. The sounds of laughter and curses drift through the night."
        }
      ]
    },
    {
      "id": "decision_training_offer",
      "category": "decision",
      "narrative_source": "lance_leader",
      "delivery": {
        "method": "automatic",
        "channel": "inquiry",
        "menu_section": "training"
      },
      "triggers": {
