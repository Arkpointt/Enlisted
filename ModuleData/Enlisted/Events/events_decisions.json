      "timing": {
        "cooldown_days": 12,
        "priority": "normal"
      },
      "titleId": "decision_scout_assignment_title",
      "title": "Special Scouting Assignment",
      "setupId": "decision_scout_assignment_body",
      "setup": "{SERGEANT_NAME} pulls you aside. \"I need someone reliable for a longer patrol. Two days out, mapping the terrain ahead. It's harder work, but I'll make sure you're compensated.\"",
      "options": [
        {
          "id": "accept",
          "textId": "decision_scout_accept",
          "costs": {
            "fatigue": 4
          },
          "rewards": {
            "gold": 35,
            "xp": {
              "enlisted": 30
            },
            "skillXp": {
              "Scouting": 25
            }
          },
          "effects": {
            "camp_reputation": 3
          },
          "text": "\"Consider it done. I'll have a full report for you.\"",
          "resultTextId": "decision_scout_accept_outcome",
          "resultText": "You ride out at dawn and return two days later with detailed reports. {SERGEANT_NAME} nods with approval and hands you a pouch of coins."
        },
        {
          "id": "decline",
          "textId": "decision_scout_decline",
          "text": "\"I'm not in condition for extended patrol right now.\"",
          "resultTextId": "decision_scout_decline_outcome",
          "resultText": "{SERGEANT_NAME} frowns slightly but accepts your answer. Someone else will take the assignment."
        }
      ]
    },
    {
      "id": "decision_medic_emergency",
      "category": "decision",
      "narrative_source": "situation",
