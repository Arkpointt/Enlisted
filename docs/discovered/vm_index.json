{
  "viewModels": {
    "SandBox.ViewModelCollection.Nameplate.SettlementNameplateVM": {
      "properties": ["Settlement:Settlement", "IsVisibleOnMap:bool", "IsMainParty:bool"],
      "commands": ["Track()", "Untrack()", "RefreshBinding()"]
    },
    "SandBox.ViewModelCollection.Nameplate.PartyNameplateVM": {
      "properties": ["Party:MobileParty", "IsMainParty:bool", "IsVisibleOnMap:bool"],
      "commands": ["RefreshBinding()"]
    },
    "SandBox.ViewModelCollection.SaveLoad.SaveLoadVM": {
      "properties": ["SavedGames:MBBindingList", "SelectedSave:SavedGameVM"],
      "commands": ["ExecuteLoad()", "ExecuteSave()", "ExecuteCancel()"]
    },
    "SandBox.ViewModelCollection.Tournament.TournamentVM": {
      "properties": ["TournamentMatches:MBBindingList", "SelectedMatch:TournamentMatchVM"],
      "commands": ["ExecuteJoin()", "ExecuteLeave()", "ExecuteWatch()"]
    },
    "SandBox.ViewModelCollection.Map.Cheat.GameplayCheatsVM": {
      "properties": ["CheatGroups:MBBindingList", "SelectedGroup:CheatGroupItemVM"],
      "commands": ["ExecuteCheat()", "ExecuteClose()"]
    }
  },
  "inventoryPattern": {
    "note": "Bannerlord uses InventoryLogic + InventoryState pattern instead of ViewModels",
    "entryPoint": "InventoryManager.OpenScreen* methods",
    "stateManagement": "InventoryState with InventoryLogic",
    "customUIAlternative": "GauntletLayer + custom ViewModel (like SAS EquipmentSelectorBehavior)"
  }
}
